@model Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="row justify-content-between mt-60-px">
    <div class="col-md-3">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="@Model.Title" />
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between mb-3">
            <h3>@Html.DisplayFor(model=>model.Title)</h3>
            <span class="mt-2">
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted">@Html.DisplayFor(model=>model.Rate)</span>
            </span>
        </div>
        <span class="text-muted mr-3">
            <i class="bi bi-calendar-week"></i>
            @Html.DisplayFor(model=>model.Year)
        </span>
        <span class="text-muted">
            <i class="bi bi-film"></i>
            @Html.DisplayFor(model=>model.Genre.Name)
        </span>
        <p class="text-justify mt-3">@Model.StoryLine</p>
    </div>
</div>



<a class="btn btn-outline-primary MT-4" asp-controller="Movies" asp-action="Index">
<i class="bi bi-film"></i> Back To Movies
</a>
